<div class="row" id="albums">

  <div class="col-sm-12 header text-center">
    <h1><%= @album.title %></h1>

    <p class="body">
      <%= simple_format @album.description %>
    </p>
    <p class="date"><%= @album.created_at.strftime("%d %B %Y") %></p>
  </div>

  
  <div class="row">
    <% @album.photos.each do |photo| %>
      <div class="col-xs-6">
        <%= image_tag photo.image.medium %>
      </div>
    <% end %>
  </div>

</div>

<% if user_signed_in? %>
  <%= link_to 'Edit', edit_album_path(@album) %>
<% end %>