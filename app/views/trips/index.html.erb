<% content_for :title do %>Where are Liz and Nathan?<% end %>
<% content_for :description do %>See a map of where Liz and Nathan are living and working today<% end %>

<div class="row">
  <div class="col-sm-12 text-center">

    <div style='width: 100%; overflow: hidden;'>
      <div id="map" style='width: 100%; height: 400px;'></div>
    </div>
  </div>
</div>


  

<script type="text/javascript">
  var checkpoints = <%= raw @checkpoints.to_json %>    // pass ruby variable to javascript
  window.checkpoints = checkpoints;
  gmap_show(checkpoints);    // init show map 
</script>
