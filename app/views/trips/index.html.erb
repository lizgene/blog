<% content_for :title do %>Where are Liz and Nathan?<% end %>
<% content_for :description do %>See a map of where Liz and Nathan are living and working today<% end %>



<div class="row">
  <div class="col-sm-12 text-center">

    <div style='width: 100%; overflow: hidden;'>
      <div id="my-map" style='width: 100%; height: 400px;'></div>
    </div>
    
  </div>
</div>


  <script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
  <script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>

  <script type="text/javascript">

    $(document).ready(function(){
      var handler = Gmaps.build('Google');
      handler.buildMap({ internal: {id: 'my-map'}}, function(){
        var markers = handler.addMarkers([
          { lat: 7.6556, lng: 99.0419}, //koh lanta
          { lat: 18.7953, lng: 98.9986}, //bangkok
          { lat: 13.7563, lng: 100.5018}, //chiang mai
          { lat: 19.3589, lng: 98.4367}, //pai
          { lat: 8.0592, lng: 98.9189}, //krabi
          { lat: 18.59344, lng: 98.57423 } //keelek
        ]);
        handler.bounds.extendWith(markers);
        handler.fitMapToBounds();
      });
    });
    

  </script>