#posts {
  .map-container {
    width: 100%; 
    overflow: hidden;
    margin-bottom: 2em;

  }
  .map-box {
    width: 100%; 
    height: 400px;
  }
  .show { //styles specific to the show view
    p {
      margin: 0 15% 1.5em;
    }
  }
  h1 {
    font-size: 18px;
    letter-spacing: 2px;
    text-transform: uppercase;
    font-weight: bold;
    text-align: center;
  }
  .header {
    .date {
      font-size: 12px;
      letter-spacing: 2px;
      text-transform: uppercase;
      font-weight: bold;
      text-align: center;
    }
  }

  .body {
    padding-top: 20px;
    padding-bottom: 20px;
  }

  p {
    line-height: 1.75em;
  }

  @media(max-width : $max-tablet-width)  { 
    p {
      margin: 0 0 1.5em 0;
    }
  }
  ul.share-this {
    a {
      color: $gray;
    }
    i {
      width: 2em;
    }
    li {
      line-height: 2.5em;
    }
  }
}