@import "bootstrap/variables";
*, *:before, *:after {
    -webkit-box-sizing: border-box; /* Needed for mobile WebKit */
    -moz-box-sizing: border-box; /* Needed for Firefox */
    box-sizing: border-box
}

html, body {
  background-color: white;
}
main {
  margin-top: 100px;
}

footer {
  height: 100px;
  margin-top: 50px;
  padding: 20px 0px;
}
.footer-container {
  display: table;
  margin: 0 auto;
  height: 100%;
  position: relative;
  border-top: 1px solid $gray-lighter;
}
.footer-content {
  display: table-cell;
  position: relative;
  text-align: center;
  vertical-align: middle;
}

h1, h2 {
  padding-bottom: 5px;
  a {
    padding-bottom: 5px;
    &:hover {
      text-decoration: none;
      border-bottom: 2px solid $brand-danger; 
    }
  }
}

.container {
  max-width: 920px;
}
a.back {
  font-size: 12px;
  text-transform: lowercase;
}



    .pin {
      display: inline-block;
      background: #FEFEFE;
      margin: 0;
      padding: 15px;
      padding-bottom: 5px;
      background: -webkit-linear-gradient(#FFF, #F9F9F9);
      opacity: 1;
      
      -webkit-transition: all .2s ease;
      -moz-transition: all .2s ease;
      -o-transition: all .2s ease;
      transition: all .2s ease;
      &:hover {
        opacity: 0.8;
        cursor: pointer;
      }
    }

  .pin .preview-image {
    height: 300px;
    position: relative !important;
    transition: all 200ms;
    padding: 0;
    color: white;
    background-position: top center;
    background-repeat: no-repeat;
    background-size: cover;
    padding-bottom: 15px;
    border-bottom: 1px solid $gray;
    margin-bottom: 20px;
    &:before {
      content: "";
      display:  block;
      position: absolute;
      top: 0;
      right: 0;
      bottom: 0;
      left: 0;
      pointer-events: none;
      background: rgba(0,0,0,0.35);
    }
    h2 {
      color: white;
      font-size: 18px;
      font-weight: bold;
      position: absolute;
      bottom: 15px;
      padding-left: 15px;
      padding-right: 15px;
      white-space:nowrap;
      text-overflow:ellipsis;
      overflow: hidden;
      width: 100%;
    }
    p {
      color: white;
      font-size: 12px;
      font-weight: bold;
      position: absolute;
      bottom: 5px;
      padding-left: 15px;
      padding-right: 15px;
      white-space:nowrap;
      text-overflow:ellipsis;
      overflow: hidden;
      width: 100%;
    }
  }

  .pin p {
    font: 14px/18px Helvetica, sans-serif;
    color: #333;
    line-height: 1.5em;
    margin: 0;
    height: 6em;
    overflow: hidden;
    text-overflow: ellipsis;
  }
  .clickable {
    cursor: pointer;
  }