@import "bootstrap/variables";
*, *:before, *:after {
    -webkit-box-sizing: border-box; /* Needed for mobile WebKit */
    -moz-box-sizing: border-box; /* Needed for Firefox */
    box-sizing: border-box
}

html, body {
  background-color: white;
}
main {
  margin-top: 100px;
}

footer {
  height: 100px;
  margin-top: 50px;
  padding: 20px 0px;
}
.footer-container {
  display: table;
  margin: 0 auto;
  height: 100%;
  position: relative;
  border-top: 1px solid $gray-lighter;
}
.footer-content {
  display: table-cell;
  position: relative;
  text-align: center;
  vertical-align: middle;
}

h1, h2 {
  padding-bottom: 5px;
  a {
    padding-bottom: 5px;
    &:hover {
      text-decoration: none;
      border-bottom: 2px solid $brand-danger; 
    }
  }
}

.container {
  max-width: 920px;
}
a.back {
  font-size: 12px;
  text-transform: lowercase;
}