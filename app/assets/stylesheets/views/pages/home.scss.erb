@import "bootstrap/variables";

body {
  padding: 0;
  background-color: transparent;
}

a {
  color: $gray-dark;
  &:hover {
    color: $brand-primary;
  }
}

div.full-page {
    width:100%;
    position: relative;
    height: 100vh;
}

.jumbotron {
  padding: 30px 15px 0px 15px;
  margin-bottom: 30px;
  text-align: center;
  display: block;
  position: relative;
  background-color: transparent;
  font-weight: bold;

  &:after {
    content: "";
    background: url(<%= asset_path 'thailand-cover.jpg' %>);
    background-repeat:repeat;
    background-position:center;
    background-attachment: fixed;
    background-size:cover;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    position: absolute;
    z-index: -1;
  }

  h1 {
    letter-spacing: 15px;
    font-size: 84px;
    margin-top: 20%;
    color: white;
    font-family: "Impact", "Charcoal", sans-serif;
    text-shadow: 0px 1px 2px $gray-darker;
  }
  .subheading {
    text-shadow: 0px 1px 2px $gray-darker;
    color: white;
    font-weight: bold;
    font-family: $font-family-monospace;  
  }
}
.lets-go {
  text-align: center;
  position: absolute;
  font-size: 24px;
  bottom: 20px;
  left: 0;
  right: 0;
  margin: 0 auto;
  text-shadow: 0px 1px 2px $gray-darker;
  color: white;
}
.border-top {
  border-top: 1px solid $gray-light;
}

.btn-special {
  margin-top: 20px;
  background-color: white;
  border-radius: 0;
  border: 2px solid $gray;
  color: $gray;
}

.info {
  position: relative;

  .vertical-content-small, .horizontal-content-small {
    height: 250px;
    overflow: hidden;
  }
  .vertical-content-small {
    padding: 20px 0px 30px 0px;
    img {
      border-right: 1px solid $gray-light;
      max-width: 50%;
      height: 100%;
    }
  }
  .horizontal-content-small {
    padding: 20px 0px 30px 0px;
    img {
      width: 100%;
      height: auto;
    }
    .text {
      width: 100%;
    }
  }
  .horizontal-content-large {
    background-color: $gray-lighter;
    overflow: hidden;
    padding-bottom: 20px;
    height: 100%;
    img {
      width: 100%;
    }
    p {
      height: 10em; 
      overflow: hidden;
    }
  }
  .text {
    width: 45%;
    h2 {
      font-size: 12px;
      letter-spacing: 2px;
      text-align: center;
      text-transform: uppercase;
      font-weight: bold;
      font-style: bold;
      position: relative;
      padding-bottom: 1.5em;
      &:after {
        content: "";
        width: 30%;
        height: 100%;
        position: absolute;
        left: 0;
        right: 0;
        margin: 0 auto;
        border-bottom: 1px solid $gray;
      }
    }
    p {
      letter-spacing: -1px;
      font-size: 12px;
      line-height: 1em;
      padding-top: 1em;
      font-family: $font-family-monospace; 
    }
  }
}