@import "bootstrap/variables";

body {
  padding: 0;
  background-color: transparent;
}

#home {
  main {
    margin-top: 0;
  }
  -webkit-font-smoothing: antialiased;
  line-height: 1.4em;
  .homepage-hero {
    display: block;
    height: 100vh;
    position: relative !important;
    background-image: url(<%= asset_path 'thailand-cover.jpg' %>);
    background-attachment: fixed;
    transition: all 200ms;
    padding: 0;
    color: white;
    text-align: center;
    background-position: top center;
    background-repeat: no-repeat;
    background-size: cover;
    &:before {
      content: "";
      display:  block;
      position: absolute;
      top: 0;
      right: 0;
      bottom: 0;
      left: 0;
      pointer-events: none;
      background: rgba(0,0,0,0.5);
    }
  }
  .homepage-hero-container {
    display: table;
    margin: 0 auto;
    height: 100%;
    position: relative;
    z-index: 10;
  }
  .homepage-hero-content {
    display: table-cell;
    position: relative;
    padding-top: 10%;
    z-index: 10;
    text-align: center;
    vertical-align: middle;
  }
  .homepage-hero-headline {
    font-size: 82px;
    letter-spacing: 8px;
    text-transform: uppercase;
    font-family: $font-family-headers-bold;
  }

  .homepage-section-header {
    font-size: 27px;
    line-height: 34px;
    color: $gray-darker;
    letter-spacing: 1px;
    text-align: center;
    padding: 60px 0 25px;
    font-family: "Montserrat", "Helvetica Neue", Helvetica, Arial, sans-serif;
    font-weight: 300;
  }


    #preview-content {
      background-color: pink;
      padding-bottom: 80px;
      padding-top: 40px;
    }


    .pin {
      display: inline-block;
      background: #FEFEFE;
      margin: 0;
      padding: 15px;
      padding-bottom: 5px;
      background: -webkit-linear-gradient(#FFF, #F9F9F9);
      opacity: 1;
      
      -webkit-transition: all .2s ease;
      -moz-transition: all .2s ease;
      -o-transition: all .2s ease;
      transition: all .2s ease;
      &:hover {
        opacity: 0.8;
        cursor: pointer;
      }
    }

  .pin .preview-image {
    height: 300px;
    position: relative !important;
    transition: all 200ms;
    padding: 0;
    color: white;
    background-position: top center;
    background-repeat: no-repeat;
    background-size: cover;
    padding-bottom: 15px;
    border-bottom: 1px solid $gray;
    margin-bottom: 20px;
    &:before {
      content: "";
      display:  block;
      position: absolute;
      top: 0;
      right: 0;
      bottom: 0;
      left: 0;
      pointer-events: none;
      background: rgba(0,0,0,0.35);
    }
    h2 {
      color: white;
      font-size: 18px;
      font-weight: bold;
      position: absolute;
      bottom: 15px;
      padding-left: 15px;
      padding-right: 15px;
      white-space:nowrap;
      text-overflow:ellipsis;
      overflow: hidden;
      width: 100%;
    }
    p {
      color: white;
      font-size: 12px;
      font-weight: bold;
      position: absolute;
      bottom: 5px;
      padding-left: 15px;
      padding-right: 15px;
      white-space:nowrap;
      text-overflow:ellipsis;
      overflow: hidden;
      width: 100%;
    }
  }

    .pin p {
      font: 14px/18px Helvetica, sans-serif;
      color: #333;
      line-height: 1.5em;
      margin: 0;
      max-height: 6em;
      overflow: hidden;
      text-overflow: ellipsis;
    }

  .btn-special {
    margin-top: 80px;
    border-radius: 0;
    border: 2px solid $gray;
    color: $gray;
    background-color: white;
    opacity: 0.5;
    &:hover {
      opacity: 1;
    }
  }

}//#home