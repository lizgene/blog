body {
  padding: 0;
  background-color: transparent;
}

#home {

  .nav {
   li a {
      color: $gray-lighter;
    }
  }
  main {
    margin-top: 0;
  }
  -webkit-font-smoothing: antialiased;
  line-height: 1.4em;

  .video-container {
    position:absolute;
    height:100%;
    width:100%;
    overflow: hidden;
  }
  #pretzel-video {
    min-width: 100%;
    min-height: 100%;
  } 
  video {
    display: inline-block;
    object-fit: contain;
  }
  .homepage-hero {
    display: block;
    height: 90vh;
    position: relative !important;
    transition: all 200ms;
    padding: 0;
    color: white;
    text-align: center;
  }
  .homepage-hero-container {
    display: table;
    margin: 0 auto;
    height: 100%;
    position: relative;
    z-index: 10;
  }
  .homepage-hero-content {
    display: table-cell;
    position: relative;
    padding-top: 10%;
    z-index: 10;
    text-align: center;
    vertical-align: middle;
  }
  .homepage-hero-headline {
    font-size: 42px;
    letter-spacing: 8px;
    text-transform: uppercase;
    font-family: $font-family-monospace;
  }

  .homepage-section-header {
    font-size: 27px;
    line-height: 34px;
    color: $gray-darker;
    letter-spacing: 1px;
    text-align: center;
    padding: 10px 0 25px;
    font-family: "Montserrat", "Helvetica Neue", Helvetica, Arial, sans-serif;
    font-weight: 300;
  }

  @media(max-width: $max-phone-width){
    #pretzel-video, .video-container, video {
      display: none;
    }
    .homepage-hero {
      background-image: url(<%= asset_path 'thailand-cover.jpg' %>);
      background-attachment: fixed;
      background-position: top center;
      background-repeat: no-repeat;
      background-size: cover;
      &:before {
        content: "";
        display:  block;
        position: absolute;
        top: 0;
        right: 0;
        bottom: 0;
        left: 0;
        pointer-events: none;
        background: rgba(0,0,0,0.5);
      }
    }
  }


    #preview-content {
      background-color: pink;
      padding-bottom: 80px;
      padding-top: 40px;
    }


    .pin {
      display: inline-block;
      background: #FEFEFE;
      margin: 0;
      padding: 15px;
      padding-bottom: 5px;
      background: -webkit-linear-gradient(#FFF, #F9F9F9);
      opacity: 1;
      
      -webkit-transition: all .2s ease;
      -moz-transition: all .2s ease;
      -o-transition: all .2s ease;
      transition: all .2s ease;
      &:hover {
        opacity: 0.8;
        cursor: pointer;
      }
    }

  .pin .preview-image {
    height: 300px;
    position: relative !important;
    transition: all 200ms;
    padding: 0;
    color: white;
    background-position: top center;
    background-repeat: no-repeat;
    background-size: cover;
    padding-bottom: 15px;
    border-bottom: 1px solid $gray;
    margin-bottom: 20px;
    &:before {
      content: "";
      display:  block;
      position: absolute;
      top: 0;
      right: 0;
      bottom: 0;
      left: 0;
      pointer-events: none;
      background: rgba(0,0,0,0.35);
    }

    @mixin text_overlay($font-size, $bottom) {
      font-size: $font-size;
      bottom: $bottom;
      color: white;
      font-weight: bold;
      position: absolute;
      padding-left: 15px;
      padding-right: 15px;
      text-overflow: ellipsis;
      overflow: hidden;
      width: 100%;
      white-space: nowrap;
    }
    h2 {
      @include text_overlay(18px, 15px);
    }
    p {
      @include text_overlay(12px, 5px);
    }
  }

    .pin p {
      font: 14px/18px Helvetica, sans-serif;
      color: #333;
      line-height: 1.5em;
      margin: 0;
      height: 6em;
      overflow: hidden;
      text-overflow: ellipsis;
    }

  .btn-special {
    margin-top: 80px;
    border-radius: 0;
    border: 2px solid $gray;
    color: $gray;
    background-color: white;
    opacity: 0.5;
    &:hover {
      opacity: 1;
    }
  }

}//#home