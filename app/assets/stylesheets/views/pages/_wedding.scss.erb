//life acquatic palette
$acquatic-light-yellow: #F3F13A;
$acquatic-dark-yellow: #D79C00;
$acquatic-light-blue: #68ABB8;
$acquatic-dark-blue: #3188A3;
$acquatic-red: #E50000;

//fantastic mr fox
$fox-yellow: #E0C800;
$fox-blue: #3E98BB;
$fox-orange: #DA7300;
$fox-red: #A40018;
$fox-burnt-orange: #D07317;

//moonrise kingdom
$mk-red: #97000E;
$mk-yellow: #E8B300;
$mk-gold: #9A711E;
$mk-blue: #7BB4A5;
$mk-white: #E2CDA9;

//Wes Anderson Fonts
$acquatic-headings-font-family: 'Futura BQ';
$mk-headings-font-family: $font-family-cursive;
$wes-anderson-headings-font-family: 'Futura';

html#wedding {
  width: 100%;
  height: 100%;

  body {
      width: 100%;
      height: 100%;
  }

  .full-page {
    padding-top: 100px; //height of navbar is 90px
    padding-bottom: 50px;
    min-height: 100%;
    background-size: cover;
    background-attachment: fixed;
  }

  .overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color:rgba(25, 25, 25, 0.4);
  }

  .headshot {
    max-height: 300px;
  }

  .intro-section {
    h1 {
      text-align: center;
      font-family: $acquatic-headings-font-family;
      font-size: 58px;
      color: $mk-yellow;
    }
    padding-top: 150px;
    font-family: $acquatic-headings-font-family;
    @extend .full-page;
    background-image: url(<%= asset_path 'wedding/cups_bw.jpg' %>);
  }

  .cast-section {
    background: #f4f4f2 url(<%= asset_path 'wedding/teal_texture.jpg' %>) 0 0 repeat;
    @extend .full-page;

    .credits {
      font-family: $wes-anderson-headings-font-family !important;
      color: $mk-red;
    }
  }

  .story-section {
    // background: #f4f4f2 url(<%= asset_path 'wedding/brownpaper.jpg' %>) 0 0 repeat;
    background-color: $mk-white;
    color: $gray-darker;
    font-family: $font-family-monospace;
    @extend .full-page;

    h4 {
      font-family: $font-family-monospace;
    }
    .chapter {
      padding: 15px;
      height: 350px;
    }

    .carousel-control {
      background: none;
      .glyphicon {
        margin-top: -150px;
      }
      &.left {
        left: -15%;
      }
      &.right {
        right: -15%;
      }
    }
    .carousel-indicator-styles {
      display: inline-block;
      border: none;
      width: 35px;
      height: 35px;

      text-indent: 0;
      cursor: pointer;
      background-color: transparent;
      margin: 0;
    }
    .carousel-indicators li {
      @extend .carousel-indicator-styles;

      .fa-stack-2x { //bottom layer (circle)
        color: $mk-yellow;
      }
      .fa-stack-1x { //top layer (flag or whatever)
        color: $mk-white;
      }
    }
    .carousel-indicators li.active {
      @extend .carousel-indicator-styles;

      .fa-stack-2x { //bottom layer
        color: $mk-yellow;
      }
      .fa-stack-1x { //top layer
        color: $mk-red;
      }
    }

  }

  .when-and-where {
    font-family: $wes-anderson-headings-font-family;
    // background-image: url(<%= asset_path 'wedding/handhold_bw.jpg' %>);
    background-color: $mk-red;
    @extend .full-page;

    .invitation {
      @extend .shadow-box;
      border: 5px double $mk-yellow;
      max-width: 700px;
      padding: 20px;
      color: $mk-yellow;

      h1 {
        font-size: 72px;
      }
    }

  }

  .guide {
    background-color: $mk-white;
    color: $mk-yellow;
    background-image: url(<%= asset_path 'wedding/window_handholds.jpg' %>);
    @extend .full-page;

    h1 {
      font-size: 58px;
    }

    #filters {
      background-color:rgba(25, 25, 25, 0.5);
      padding: 20px;
      background-clip: padding-box;
      border: 10px solid transparent;
      text-transform: uppercase;
      font-family: $wes-anderson-headings-font-family;
      font-size: 24px;
      ol {
        margin: 0;
        li {
          margin-left: 5px;
          margin-right: 5px;
          padding-bottom: 5px;
          border-bottom: 3px solid transparent;
          cursor: pointer;
          &:hover {
            border-bottom: 3px solid $mk-white;
          }
        }
      }
    }

    .place {
      a {
        color: $mk-white;
        text-decoration: none;
      }
      background-color: $mk-red;
      color: $mk-white;
      background-clip: padding-box;
      border: 10px solid transparent;

      p {
        font-size: 14px;
        text-transform: uppercase;
        font-family: $wes-anderson-headings-font-family;
      }

      h2 {
        font-family: $acquatic-headings-font-family;
        border-top: 1px solid $mk-white;
        border-bottom: 1px solid $mk-white;
        margin-top: 10px;
        margin-bottom: 10px;
        padding: 10px;
        text-transform: uppercase;
      }

      &:hover {
        background-color: lighten($mk-red, 3%);
        -webkit-transition: background-color 100ms linear;
        -moz-transition: background-color 100ms linear;
        -o-transition: background-color 100ms linear;
        -ms-transition: background-color 100ms linear;
        transition: background-color 100ms linear;
      }
    }
  }


  .rsvp-section {
    background-color: $mk-red;
    // background-image: url(<%= asset_path 'wedding/moonrisekingdom-married.jpg' %>);
    @extend .full-page;
  }

  .why-section {
    background-color: $mk-white;
    // background-image: url(<%= asset_path 'wedding/moonrisekingdom-married.jpg' %>);
    @extend .full-page;
  }

  .quote-section {
    position: relative;
    height: 5px;
    text-align: center;
    color: $mk-white;
    background-color: $mk-gold;
    background: $mk-gold url(<%= asset_path 'wedding/gold-border.jpg' %>) 0 0 repeat;  
  }


  // Navbar

  nav {
    li {
      a {
        font-size: 24px;
        font-family: $headings-font-family;
      }
    }
  }

  #wedding-header {
    height: 80px;
    margin: 0;
    position: absolute;
    width: 100%;
    bottom: 0;
    background-color:rgba(25, 25, 25, 0.4);

    &:after {
      background: transparent url(<%= asset_path 'wedding/diagonal_texture.png' %>) 0 0 repeat;
      content: '';
      display: block;
      width: 100%;
      height: 24px;
      position: absolute;
      bottom: -10px;
    }
  }

  #wedding-header.affix {
    position: fixed;
    background-color:rgba(25, 25, 25, 0.4);
    top: 0;
    width: 100%;
    z-index: 100;
    left: 0;
    margin-top: 0;

  }

  .navbar .nav,
  .navbar .nav > li {
    float:none;
    display:inline-block;
    *display:inline; /* ie7 fix */
    *zoom:1; /* hasLayout ie7 trigger */
    vertical-align: top;
  }

  .navbar-inner {
    text-align:center;
  }

  .nav {
   li a {
      color: $mk-blue;
      padding: 0px 0px 10px 0px;
      margin: 0px 15px;
      &:link, &:hover, &:visited, &:active {
        background-color: transparent;
        outline: 0;
        -webkit-tap-highlight-color: rgba(0, 0, 0, 0); //gets rid of grey background on link when clicked
      }
    }
  }

  .navbar-link {
    min-width: 45px;
  }

  .navbar-logo {
    height: 2em;
    margin-top: -5px;
  }


  @media(min-width:767px) {
    .navbar {
        padding: 20px 0;
        -webkit-transition: background .5s ease-in-out,padding .5s ease-in-out;
        -moz-transition: background .5s ease-in-out,padding .5s ease-in-out;
        transition: background .5s ease-in-out,padding .5s ease-in-out;
    }

    .top-nav-collapse {
        padding: 0;
    }
  }

  // utilities

  .text-headers-small {
    font-size: 32px !important;
  }

  .vertical-center {
    padding: 0;
    min-height: 100%;  /* Fallback for browsers do NOT support vh unit */
    min-height: 100vh;
    display: flex;
    align-items: center;
  }

  .shadow-box { //essentially a background box with low opacity
    -webkit-box-shadow: 0 10px 6px -6px #777;
    -moz-box-shadow: 0 10px 6px -6px #777;
    box-shadow: 0 10px 6px -6px #777;
    background-color:rgba(25, 25, 25, 0.5);
  }

  .futura {
    font-family: $wes-anderson-headings-font-family !important;
  }

  .cursive {
    font-family: $font-family-cursive;
  }

  .grayscale {
    -webkit-filter: grayscale(100%);
  }
  .sepia {
    -webkit-filter: sepia(100%);
  }

  .huerotation {
    -webkit-filter: hue-rotate(180deg);
  }

}