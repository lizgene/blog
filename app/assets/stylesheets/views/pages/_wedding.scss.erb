html#wedding {
  width: 100%;
  height: 100%;
  
  nav {
    margin-top: 20px;
    li {
      a {
        font-size: 28px;
        color: $brand-info;
        font-family: $headings-font-family;
      }
    }
  }

  body {
      width: 100%;
      height: 100%;
  }

  .full-page {
    h1 {
      font-size: 58px;
      color: $brand-info;
      font-family: $font-family-cursive;
    }
    height: 100%;
    min-height: 100%;
    padding-top: 150px;
    text-align: center;
    background-size: cover;
    background-attachment: fixed;
  }
  .half-page {
    padding: 50px 0px;
    text-align: center;
  }

  .intro-section {
    @extend .full-page;
    background-image: url(<%= asset_path 'moonrisekingdom-compass.jpg' %>);
  }

  .when-section {
    background-image: url(<%= asset_path 'moonrisekingdom-dancing.jpg' %>);
    @extend .full-page;
  }
  .where-section {
    background-image: url(<%= asset_path 'moonrisekingdom-field.jpg' %>);
    @extend .full-page;
  }

  .what-section {
    background-image: url(<%= asset_path 'moonrisekingdom-married.jpg' %>);
    @extend .full-page;
  }

  .who-section {
    background-image: url(<%= asset_path 'moonrisekingdom-married.jpg' %>);
    @extend .full-page;
  }
  .rsvp-section {
    background-image: url(<%= asset_path 'moonrisekingdom-married.jpg' %>);
    @extend .full-page;
  }

  .why-section {
    background-image: url(<%= asset_path 'moonrisekingdom-married.jpg' %>);
    @extend .full-page;
  }

  .quote-section {
    @extend .half-page;
    color: $brand-info;
    background: $brand-warning;
  }


  // Navbar

  header {
    background-color: transparent;
    position: absolute;
    top: 0;
  }

  .navbar .nav,
  .navbar .nav > li {
    float:none;
    display:inline-block;
    *display:inline; /* ie7 fix */
    *zoom:1; /* hasLayout ie7 trigger */
    vertical-align: top;
  }

  .navbar-inner {
    text-align:center;
  }

  .nav {
     li a {
        padding: 0px 0px 10px 0px;
        margin: 0px 15px;
        &:link, &:hover, &:visited, &:active {
          background-color: transparent;
          outline: 0;
          -webkit-tap-highlight-color: rgba(0, 0, 0, 0); //gets rid of grey background on link when clicked
        }
      }
  }

  .navbar-link {
    min-width: 45px;
  }

  .navbar-logo {
    height: 2em;
    margin-top: -5px;
  }


  @media(min-width:767px) {
    .navbar {
        padding: 20px 0;
        -webkit-transition: background .5s ease-in-out,padding .5s ease-in-out;
        -moz-transition: background .5s ease-in-out,padding .5s ease-in-out;
        transition: background .5s ease-in-out,padding .5s ease-in-out;
    }

    .top-nav-collapse {
        padding: 0;
    }
  }

}